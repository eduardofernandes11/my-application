<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_agricultores"
        tools:context=".ui.MainActivity">
    <LinearLayout
            android:id="@+id/outterLinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="270dp">

            <android.support.v7.widget.CardView
                    android:id="@+id/cardView0"
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="visible"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp">

                    <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="JoÃ£o Barroso"
                                android:gravity="center"
                                android:textSize="25sp" />

                    </LinearLayout>

                    <ImageButton
                            android:id="@+id/joao"
                            android:layout_width="137dp"
                            android:layout_height="165dp"
                            android:backgroundTint="#FFFFFF"
                            android:scaleType="centerInside"
                            android:tag="0"
                            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/joao"
                            tools:ignore="MissingConstraints" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout1"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageButton
                            android:id="@+id/joaquim"
                            android:layout_width="127dp"
                            android:layout_height="146dp"
                            android:background="#FFFFFF"
                            android:scaleType="centerInside"
                            android:tag="1"
                            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.509"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/joaquim"
                            tools:ignore="MissingConstraints" />

                    <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Joaquim Afonso"
                                android:gravity="center"
                                android:textSize="25sp" />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="270dp">
            <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="190dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="6dp">
                <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout2"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageButton
                            android:id="@+id/carlos"
                            android:layout_width="127dp"
                            android:layout_height="146dp"
                            android:background="#FFFFFF"
                            android:scaleType="centerInside"
                            android:tag="2"
                            app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.509"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/carlos"
                            tools:ignore="MissingConstraints" />

                    <LinearLayout
                            android:id="@+id/linearLayout10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:ignore="MissingConstraints">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Carlos Mendes"
                                android:textSize="25sp"
                                android:gravity="center"/>


                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>